<dl>
  <dt><label>*Nome:</label></dt>
  <dd><%= text_field :user, :name, :size => 60, :maxlength => 100 %></dd>
</dl>
<dl>
  <dt><label>*Usuário:</label></dt>
  <dd><%= text_field :user, :username,  :size => 30, :maxlength => 30 %></dd>
</dl>
<dl>
  <dt><label>*Senha:</label></dt>
  <dd><%= password_field :user, :password, :value => "", :size => 30, :maxlength => 30 %></dd>
</dl>
<dl>
  <dt><label>*Confirmação:</label></dt>
  <dd><%= password_field :user, :password_confirmation, :value => "", :size => 30, :maxlength => 30 %></dd>
</dl>

<dd><%= submit_tag "Salvar" %></dd>
<dd><%= link_to "Voltar", {:action => :index}, :class => :botao %></dd>



